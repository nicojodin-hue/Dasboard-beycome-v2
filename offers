<script>
/* ========== SHARED JS ========== */
const isDesktop = () => window.innerWidth > 1024;

// Greeting
(function(){
  const h = new Date().getHours();
  const g = h<12?'Good morning':h<17?'Good afternoon':'Good evening';
  const i = h<12?'‚òÄÔ∏è':h<17?'üå§Ô∏è':'üåô';
  document.getElementById('navGreeting').innerHTML = `<span style="font-size:20px;line-height:1">${i}</span> ${g}, John Doe`;
})();

// Dropdown management
function closeAllDropdowns(){document.querySelectorAll('.menu,.dashboard-menu,.notifications-menu').forEach(m=>m.classList.remove('show'));document.body.style.overflow=''}
function toggleMenu(id,e){e.stopPropagation();e.preventDefault();const m=document.getElementById(id);const open=m.classList.contains('show');closeAllDropdowns();if(!open){m.classList.add('show');if(id==='notificationsMenu')renderNotifs()}}
document.addEventListener('click',e=>{if(!e.target.closest('.filter-dropdown,.dashboard-dropdown,.notifications-dropdown,.nav-item,.mobile-more-wrapper,.menu'))closeAllDropdowns()});

// Notifications
let notifs=[
  {id:1,type:'offer',icon:'üí∞',title:'<strong>John Smith</strong> submitted an offer on <strong>123 Main Street</strong>',time:'2 hours ago',unread:true},
  {id:2,type:'visit',icon:'üìÖ',title:'<strong>Sarah Johnson</strong> requested a visit',time:'5 hours ago',unread:true},
  {id:3,type:'message',icon:'üí¨',title:'<strong>Michael Chen</strong> sent you a message',time:'2 days ago',unread:true},
  {id:4,type:'visit',icon:'‚úÖ',title:'Visit confirmed for <strong>789 Palm Avenue</strong>',time:'3 days ago',unread:true}
];
function renderNotifs(){
  document.getElementById('notifList').innerHTML=notifs.map(n=>
    `<div class="notification-item ${n.unread?'unread':''}" onclick="notifs.find(x=>x.id===${n.id}).unread=false;updateNotifBadge();renderNotifs()">
      <div class="notification-icon ${n.type}">${n.icon}</div>
      <div class="notification-content"><div class="notification-title">${n.title}</div><div class="notification-meta">${n.unread?'<span class="notification-dot"></span>':''}<span>${n.time}</span></div></div>
    </div>`).join('');
}
function markAllRead(e){e.stopPropagation();notifs.forEach(n=>n.unread=false);updateNotifBadge();renderNotifs()}
function updateNotifBadge(){const c=notifs.filter(n=>n.unread).length;const b=document.getElementById('notifBadge');const btn=document.querySelector('.notifications-btn');if(c>0){b.textContent=c;b.style.display='flex';btn.classList.add('has-unread')}else{b.style.display='none';btn.classList.remove('has-unread')}}
updateNotifBadge();

// Chat
function addChat(msg,isUser=false){
  const c=document.getElementById('chatMessages');
  const d=document.createElement('div');
  d.className='chat-message '+(isUser?'user':'bot');
  d.innerHTML=`<div><div class="message-bubble">${msg}</div></div>`;
  c.appendChild(d);c.scrollTop=c.scrollHeight;
}
function sendChat(){
  const i=document.getElementById('chatInput');const t=i.value.trim();if(!t)return;
  addChat(t,true);i.value='';
  setTimeout(()=>addChat("I can help with that! What would you like to do?"),800);
}
function openMobileChat(){document.querySelector('.chat-widget').classList.add('mobile-open')}
function closeMobileChat(){document.querySelector('.chat-widget').classList.remove('mobile-open')}

// Toast
function showToast(msg){
  const t=document.createElement('div');t.className='toast';t.textContent=msg;
  document.body.appendChild(t);
  setTimeout(()=>{t.style.opacity='0';t.style.transition='opacity .3s';setTimeout(()=>t.remove(),300)},2000);
}

// Modals
function closeModal(id){document.getElementById(id).classList.remove('show')}
document.querySelectorAll('.modal-overlay').forEach(o=>o.addEventListener('click',e=>{if(e.target===o)o.classList.remove('show')}));

// Contact
function contactPerson(name,email,phone){
  if(isDesktop()){
    addChat(`Contact ${name}`,true);
    setTimeout(()=>addChat(`üìã <strong>${name}</strong><br>üìû ${phone}<br>‚úâÔ∏è ${email}<br><br>Would you like to send a message?`),600);
  }else{
    document.getElementById('msgModalTitle').textContent='Message to '+name;
    document.getElementById('msgModalContact').innerHTML=`From <strong>${name}</strong> ¬∑ ${phone} ¬∑ ${email}`;
    document.getElementById('msgText').value='';
    document.getElementById('messageModal').classList.add('show');
  }
}
function sendContactMsg(){
  closeModal('messageModal');
  if(isDesktop())addChat('‚úâÔ∏è Your message has been <strong>sent</strong>!');
  else{document.getElementById('successTitle').textContent='Message Sent!';document.getElementById('successMessage').textContent='Your message has been delivered.';document.getElementById('successModal').classList.add('show')}
}

/* ========== PAGE: OFFERS JS ========== */
function filterOffers(filter,label,e){
  e.stopPropagation();
  document.querySelectorAll('#offerFilterMenu .menu-item').forEach(i=>i.classList.remove('active'));
  e.target.closest('.menu-item').classList.add('active');
  document.getElementById('offerFilterMenu').classList.remove('show');
  document.getElementById('offerFilterText').textContent=label;

  const rc=document.getElementById('offersReceived');
  const sc=document.getElementById('offersSent');
  let count=0;

  if(filter==='all'){
    rc.style.display='block';sc.style.display='block';
    rc.querySelectorAll('.visit-card').forEach(c=>{c.style.display='block';count++});
    sc.querySelectorAll('.visit-card').forEach(c=>{c.style.display='block';count++});
  }else if(filter==='received'){
    rc.style.display='block';sc.style.display='none';
    rc.querySelectorAll('.visit-card').forEach(c=>{c.style.display='block';count++});
  }else if(filter==='sent'){
    rc.style.display='none';sc.style.display='block';
    sc.querySelectorAll('.visit-card').forEach(c=>{c.style.display='block';count++});
  }else if(filter==='pending'){
    rc.style.display='block';sc.style.display='block';
    document.querySelectorAll('#offersReceived .visit-card, #offersSent .visit-card').forEach(c=>{
      const show=c.dataset.status==='pending';c.style.display=show?'block':'none';if(show)count++;
    });
  }else if(filter==='accepted'){
    rc.style.display='block';sc.style.display='none';
    rc.querySelectorAll('.visit-card').forEach(c=>{
      const show=c.dataset.status==='accepted';c.style.display=show?'block':'none';if(show)count++;
    });
  }
  document.getElementById('offerFilterCount').textContent=count;
}

function viewOffer(btn){
  const title=btn.closest('.visit-card').querySelector('.address-main').textContent;
  if(isDesktop()){
    addChat(`üìÑ <strong>Viewing offer for ${title}</strong><br><br>I can help you:<br>‚Ä¢ Understand the terms<br>‚Ä¢ Compare to market value<br>‚Ä¢ Draft a counter-offer<br>‚Ä¢ Accept or decline<br><br>What would you like to do?<div style="margin-top:12px;display:flex;gap:8px;flex-wrap:wrap"><button class="btn" onclick="this.parentElement.style.display='none';addChat('Let me explain the key terms‚Ä¶')">Explain terms</button><button class="btn btn-p" onclick="this.parentElement.style.display='none';addChat('Great choice! Let me help you accept this offer‚Ä¶')">Accept offer</button></div>`);
  }else openMobileChat();
}

// Init chat
setTimeout(()=>addChat('üëã Hi John! I\'m <strong>Artur</strong>, your personal real estate assistant.<br><br>üí∞ You have <strong>1 pending offer</strong> that expires soon! Want me to explain your options?<div style="margin-top:12px"><button class="btn btn-p" onclick="this.parentElement.style.display=\'none\'">Show me my options</button></div>'),800);
</script>
</body>
